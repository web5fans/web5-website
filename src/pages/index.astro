---
import Layout from '../layouts/Layout.astro';
import Header from "../components/landing/Header.astro";
import Hero from "../components/landing/Hero.astro";
import ScrollingBanner from "../components/landing/ScrollingBanner.astro";
import PromisedVsReality from "../components/landing/PromisedVsReality.astro";
import MassAdoption from "../components/landing/MassAdoption.astro";
import BuildWeb5 from "../components/landing/BuildWeb5.astro";
import Footer from "../components/landing/Footer.astro";
import "../styles/global.css";
---

<Layout title="Web5 - The Decentralized Web Platform">
	<!-- Outer wrapper with dark background -->
	<div class="flex justify-center min-h-screen">
		<!-- Main content area with noise texture -->
		<div class="w-full min-h-screen relative" style="max-width: 1440px;">
			<!-- Left border line -->
			<div class="absolute top-0 bottom-0 left-5 w-px bg-web5-dark z-10"></div>
			<!-- Right border line -->
			<div class="absolute top-0 bottom-0 right-5 w-px bg-web5-dark z-10"></div>
			
			<!-- Content wrapper with padding for the border lines -->
			<div class="relative">
				<Header />
				<main class="px-5">
					<Hero />
					<ScrollingBanner />
					<PromisedVsReality />
					<MassAdoption />
					<BuildWeb5 />
					<Footer />
				</main>
			</div>
		</div>
	</div>
</Layout>
