---
import PixelNoiseBackground from "../components/landing/PixelNoiseBackground.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
  </head>
  <body>
    <!-- 背景层 -->
    <PixelNoiseBackground color="#F2EBE3" opacity={0.2} density={0.3} />

    <!-- 内容插槽 -->
    <div class="relative z-10">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  /* 全局重置，确保背景占满 */
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
  }
</style>
