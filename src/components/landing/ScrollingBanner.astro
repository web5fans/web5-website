---
const items = [
  "Red/Blue?",
  "KNOW WHICH YOU SWALLOWED",
  "Red/Blue?",
  "KNOW WHICH YOU SWALLOWED",
  "Red/Blue?",
  "KNOW WHICH YOU SWALLOWED",
];
---

<section class="w-full h-[72px] border-t-2 border-b-2 border-web5-dark overflow-hidden">
  <div class="relative w-full h-full flex items-center">
    <!-- Scrolling content container -->
    <div class="flex items-center gap-8 animate-scroll whitespace-nowrap">
      {[...items, ...items].map((text) => (
        <>
          <!-- Matrix/Code block icon -->
          <div class="w-8 h-8 grid grid-cols-4 gap-0.5">
            {Array(16).fill(0).map(() => (
              <div class="w-1.5 h-1.5 bg-web5-dark"></div>
            ))}
          </div>
          <span class="text-subheader2 uppercase text-web5-dark">{text}</span>
        </>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .animate-scroll {
    animation: scroll 30s linear infinite;
  }
</style>

